@model WooriOptical.Models.CustomerViewModel

@{
    ViewData["Title"] = "Customer Details";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Customer Details</h2>
            
            <!-- Customer Information Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h4>@Model.Name</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md">
                            <p><strong>Email:</strong> @Model.Email</p>
                            <p><strong>Phone:</strong> @(Model.FormattedPhone ?? "-")</p>
                            <p><strong>Address:</strong> @(Model.FormattedAddress ?? "-")</p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-warning">Edit Customer</a>
                    </div>
                </div>
            </div>

            <!-- Prescriptions Section -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4>Prescriptions</h4>
                    <a asp-action="CreatePrescription" asp-route-customerId="@Model.CustomerId" class="btn btn-primary btn-sm">Add New Prescription</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Date Issued</th>
                                    <th>OD (Right Eye)</th>
                                    <th>OS (Left Eye)</th>
                                    <th>PD</th>
                                    <th>Add</th>
                                    <th>Notes</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Prescriptions != null && Model.Prescriptions.Any())
                                {
                                    @foreach (var prescription in Model.Prescriptions.OrderByDescending(p => p.DateIssued))
                                    {
                                        <tr>
                                            <td>@prescription.DateIssued.ToString("yyyy-MM-dd")</td>
                                            <td>SPH: @prescription.RSphere.ToString("F2"), CYL: @prescription.RCylinder.ToString("F2"), AXIS: @prescription.RAxis</td>
                                            <td>SPH: @prescription.LSphere.ToString("F2"), CYL: @prescription.LCylinder.ToString("F2"), AXIS: @prescription.LAxis</td>
                                            <td>@prescription.PD.ToString("F1")</td>
                                            <td>@(prescription.Add != 0 ? "+" + prescription.Add.ToString("F2") : "-")</td>
                                            <td>@(string.IsNullOrEmpty(prescription.Notes) ? "-" : prescription.Notes)</td>
                                            <td>
                                                <a asp-action="Prescription" asp-route-id="@prescription.PrescriptionId" class="btn btn-sm btn-warning">Edit</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">No prescriptions found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Orders Section -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4>Orders</h4>
                    <a asp-action="CreateOrder" asp-route-customerId="@Model.CustomerId" class="btn btn-primary btn-sm">Add New Order</a>
                </div>
                <div class="card-body">
                    @* TODO: Replace with actual order data *@
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Order Date</th>
                                    <th>Frame</th>
                                    <th>Lens</th>
                                    <th>Total Amount</th>
                                    @* <th>Deposit</th>
                                    <th>Balance Paid</th> *@
                                    <th>Balance Due</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Orders != null && Model.Orders.Any())
                                {
                                    @foreach (var order in Model.Orders.OrderByDescending(o => o.OrderDate))
                                    {
                                        <tr>
                                            <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                                            <td>@order.Frame - $@order.FramePrice</td>
                                            <td>@order.Lens - $@order.LensPrice</td>
                                            <td>$@order.TotalAmount.ToString("F2")</td>
                                            @* <td>$@(string.IsNullOrEmpty(order.Deposit) ? "0.00" : order.Deposit)</td>
                                            <td>$@(string.IsNullOrEmpty(order.BalancePaid) ? "0.00" : order.BalancePaid)</td> *@
                                            <td>$@(string.IsNullOrEmpty(order.Balance) ? "0.00" : order.Balance)</td>
                                            <td>
                                                @if (order.PayoffStatus == "Paid")
                                                {
                                                    <span class="badge bg-success">Paid</span>
                                                }
                                                else if (order.PayoffStatus == "Partial")
                                                {
                                                    <span class="badge bg-warning">Partial</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Pending</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="OrderDetails" asp-route-id="@order.OrderId" class="btn btn-sm btn-info">View</a>

                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">No orders found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="d-flex justify-content-between mt-3">
    <div>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
<style>
    .card-header h4 {
        margin: 0;
    }
    .badge {
        font-size: 0.75em;
    }
    .table th {
        background-color: #f8f9fa;
    }
</style>
