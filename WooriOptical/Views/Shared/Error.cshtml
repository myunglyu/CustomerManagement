@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2><i class="fas fa-exclamation-triangle"></i> Oops! Something went wrong</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>We apologize for the inconvenience</h4>
                        <p>An unexpected error has occurred while processing your request. Our team has been notified and will investigate this issue.</p>
                        
                        @if (Model.ShowRequestId)
                        {
                            <hr>
                            <p class="mb-0">
                                <strong>Error ID:</strong> <code>@Model.RequestId</code>
                                <small class="text-muted d-block">Please include this ID when contacting support.</small>
                            </p>
                        }
                    </div>
                    
                    <div class="mt-4">
                        <h5>What you can do:</h5>
                        <ul>
                            <li>Try refreshing the page</li>
                            <li>Go back to the <a asp-controller="Home" asp-action="Index">home page</a></li>
                            <li>Check if all required fields were filled correctly</li>
                            <li>Contact support if the problem persists</li>
                        </ul>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home"></i> Return to Home
                        </a>
                        <button onclick="history.back()" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Go Back
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewContext.HttpContext.RequestServices.GetService<IWebHostEnvironment>()?.IsDevelopment() == true)
{
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-warning">
                        <h5>Development Information</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-warning">
                            <strong>Note:</strong> This detailed error information is only shown in development mode.
                            In production, users will see a simplified error message above.
                        </p>
                        
                        @if (Model.ShowRequestId)
                        {
                            <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
                        }
                        
                        <p>
                            To see detailed error information in development, ensure the <strong>ASPNETCORE_ENVIRONMENT</strong> 
                            environment variable is set to <strong>Development</strong> and restart the application.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
