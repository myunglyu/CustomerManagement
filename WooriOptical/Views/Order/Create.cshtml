@model CustomerViewModel[]

@{
    ViewData["Title"] = "Create New Order";
}

<h2>Select Customer</h2>
<hr>

<h4>Search for Customer</h4>

<div class="mb-3">
    <input class="form-control" type="text" id="searchCustomer" placeholder="Enter customer name or phone number" />
</div>

<hr>

<form asp-action="SelectPrescription" method="get">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Select</th>
                <th>Name</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr class="customer-option">
                    <td>
                        <input type="radio" name="customerId" value="@customer.CustomerId" required />
                    </td>
                    <td>@customer.Name</td>
                    <td>@customer.Phone</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Next - Select Prescription</button>
        <a href="#" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#backToOrdersModal">Back to Orders</a>
    </div>
</form>

<!-- Back to Orders Confirmation Modal -->
<div class="modal fade" id="backToOrdersModal" tabindex="-1" aria-labelledby="backToOrdersModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="backToOrdersModalLabel">Confirm Navigation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to go back to the Orders page? Unsaved changes will be lost.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Stay</button>
                <a asp-action="Index" class="btn btn-danger">Leave Page</a>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('searchCustomer').addEventListener('input', function () {
        var filter = this.value.toLowerCase();
        var rows = document.querySelectorAll('.customer-option');

        rows.forEach(function (row) {
            var name = row.cells[1].textContent.toLowerCase();
            var phone = row.cells[2].textContent.toLowerCase();
            if (name.includes(filter) || phone.includes(filter)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
</script>
